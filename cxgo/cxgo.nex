func (yylex Lexer) Error (e string) {
	if inREPL {
		fmt.Printf("syntax error: %s\n", e)
	} else {
		fmt.Printf("%d: syntax error: %s\n", yylex.Line() + 1, e)
	}
	
	yylex.Stop()
}

func getWorkingDirectory (file string) string {
	var c int = len(file) - 1
	for ; c > 0; c-- {
		if file[c - 1] == os.PathSeparator {
			break
		}
	}
	return file[:c]
}

